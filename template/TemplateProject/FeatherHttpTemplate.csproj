<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageId>FeatherHttp.Templates</PackageId>
    <Authors>David Fowler</Authors>
    <Description>Templates to use when creating a FeatherHttp application.</Description>
    <PackageTags>dotnet-new;templates;featherhttp</PackageTags>
    <TargetFramework>netcoreapp3.1</TargetFramework>    
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>    
  </PropertyGroup>
  <Target Name="CopyFiles">
    <Copy 
      SourceFiles="..\TemplateContent\**\*.*" 
      DestinationFolder=".\content"
    />
  </Target>
  <ItemGroup>
    <Content Include="content\**\*" Exclude="content\**\bin\**;content\**\obj\**">
      <PackagePath>\</PackagePath> 
    </Content>
    <Compile Remove="**\*" />        
  </ItemGroup>
</Project>